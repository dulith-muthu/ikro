{% extends 'login.base.html.twig' %}
{% block title %} Admin Login {% endblock %}
 {% block stylesheets %}
     {{ parent() }}


     <link rel="stylesheet" type="text/css" href="{{ asset('css/app.login.css') }}">



 {% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ url('adminLogin') }}" accept-charset="utf-8" method="post" hidden>

        <div class="form-group">
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
            <label for="username">Username</label>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name="_password">
            <label for="password">Password</label>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-6 text-right">
                <button class="btn btn-primary btn-raised" type="submit">Login</button>
            </div>
        </div>
    </form>

    <div class="mdl-layout mdl-js-layout mdl-color--grey-100">
        <main class="mdl-layout__content">
            <div class="mdl-card mdl-shadow--6dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">IKRO Trade Center</h2>
                </div>
                <form action="{{ url('adminLogin') }}" accept-charset="utf-8" method="post">
                    <div class="mdl-card__supporting-text">

                        <div class="mdl-textfield mdl-js-textfield">

                            <input type="text" class="mdl-textfield__input" id="username" name="_username"
                                   value="{{ last_username }}">


                            <label class="mdl-textfield__label" for="username">Username</label>

                        </div>
                        <div class="mdl-textfield mdl-js-textfield">

                            <input type="password" class="mdl-textfield__input" id="password" name="_password">


                            <label class="mdl-textfield__label" for="userpass">Password</label>
                        </div>

                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                            Log
                            in
                        </button>


                    </div>
                </form>
            </div>
        </main>
    </div>

{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script src="{{ asset('js/app.login.js') }}"></script>


 {% endblock %}