{% block javascripts %}

    <script src="{{ asset('bower/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower/material-design-lite/material.min.js') }}"></script>
    <script src="{{ asset('bower/jquery-ui/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/app.base.js') }}"></script>


{% endblock %}
</body>
</html>
