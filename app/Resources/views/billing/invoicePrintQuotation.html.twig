{% extends 'base.html.twig' %}

{% block sideBar %}
{% endblock %}

{% block body %}

    {% for flash_message in app.session.flashBag.get('error') %}
                <div class="alert alert-danger" style="text-align: center">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success" style="text-align: center">
                    {{ flash_message }}
                </div>
            {% endfor %}
    {{ customer.name }}
    {{ customer.address }}
    <table>
        <thead>
            <th>Item</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Discount on unit Price</th>
            <th>Total</th>
        </thead>
        <tbody>
    {% for item in invoice %}
        <tr>
            <td>{{ item.itemCode ~ " "~ item.itemName }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.price }}</td>
            <td>{{ item.discount }}</td>
            <td>{{ item.totalPrice }}</td>
        </tr>


        {% endfor %}

        </tbody>
    </table>


{% endblock %}