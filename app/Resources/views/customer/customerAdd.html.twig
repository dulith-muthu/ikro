{% extends 'base.html.twig' %}

{% block body %}

    {% for flash_message in app.session.flashBag.get('error') %}
        <div class="alert alert-danger" style="text-align: center">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success" style="text-align: center">
            {{ flash_message }}
        </div>
    {% endfor %}

    {{ form_start(form,{'attr':{'class':'form'}}) }}

    <div class="form-group">
        {{ form_errors(form.name) }}
        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
        {{ form_label(form.name) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.address) }}
        {{ form_widget(form.address,{'attr':{'class':'form-control'}}) }}
        {{ form_label(form.address) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.nic) }}
        {{ form_widget(form.nic,{'attr':{'class':'form-control'}}) }}
        {{ form_label(form.nic) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.mobile) }}
        {{ form_widget(form.mobile,{'attr':{'class':'form-control'}}) }}
        {{ form_label(form.mobile) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.fixed) }}
        {{ form_widget(form.fixed,{'attr':{'class':'form-control'}}) }}
        {{ form_label(form.fixed) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.save,{'attr':{'class':'btn ink-reaction btn-primary' }}) }}
    </div>
    {{ form_end(form) }}

{% endblock %}