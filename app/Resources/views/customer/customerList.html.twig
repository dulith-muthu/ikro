                    <table>
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>NIC</th>
                            <th>Mobile</th>
                            <th>Fixed</th>
                        </tr>
                        </thead>
                        <tbody>
                        <td><input name="name" value="{{ name }}" class="search-input"></td>
                        <td><input name="address" value="{{ address }}" class="search-input"></td>
                        <td><input name="nic" value="{{ nic }}" class="search-input"></td>
                        <td><input name="mobile" value="{{ mobile }}" class="search-input"></td>
                        <td><input name="fixed" value="{{ fixed }}" class="search-input"></td>
                        <td>
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent main-buttons"
                                    id="btnCashPayment" type="submit"><i class="material-icons">search</i>
                            </button>
                        </td>
                        </tbody>
                    </table>
                </div>

            </form>
