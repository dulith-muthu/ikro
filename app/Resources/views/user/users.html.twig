{% extends 'base.html.twig' %}

{% block body %}
    <h3>Users</h3>
    <table class="mdl-data-table mdl-js-data-table  mdl-shadow--2dp">
        <thead>
        <tr>
            <th class="mdl-data-table__cell--non-numeric">Name</th>
            <th class="mdl-data-table__cell--non-numeric">Created Date</th>
            <th class="mdl-data-table__cell--non-numeric">Email</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="mdl-data-table__cell--non-numeric">{{ user.username }}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ user.createdAt | date('F j,Y,g:i a') }}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ user.email }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        <ul class="pagination">
            <li class="disabled">
                <span>«&nbsp;Previous</span>
            </li>
            <li class="active">
                <span>1</span>
            </li>
            <li>
                <a href="/ikro/web/app_dev.php/admin/users/list?page=2">2</a>
            </li>
            <li>
                <a rel="next" href="/ikro/web/app_dev.php/admin/users/list?page=2">Next&nbsp;»</a>
            </li>
        </ul>
    </div>

{% endblock %}